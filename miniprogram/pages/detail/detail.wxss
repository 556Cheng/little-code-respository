@import  "../../style/weui.wxss";
.biaoti{
  display: flex;
  flex-direction: column;
  padding: 5px 6% 5px 6%;
}
.contain{
   display: flex;
  flex-direction: column;
   font-size: 4vw;
   padding: 5px 6vw 5px 6vw;
   color: gray;
}
.left{
   font-size: 5vw;
  font-weight: bold;
}
.right{
  display: flex;
  flex-direction: row;
  padding-top: 0px;
   font-size: 3vw;
  color: #999;
 
}
.line{
   height: 5px;
  background-color: #ccc;
  opacity: 0.2;
}
.line1{
   height: 1px;
  background-color: #ccc;
  opacity: 0.2;
}
.image-group view{
  display: inline-block;
  flex-direction: row;
  padding: 1vw;
  width: 250rpx;
  height: 250rpx;
  background-color: #cfcccc;
}

.image-group view image{
  width: 100%;
  height: 100%;
  align-items: center;
}
.contain-all{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.contain-tet{
  font-weight: lighter;
  font-size: 4vw;
  color: gray;
  width: 22vw;
  padding-top: 1vh;
   padding-bottom: 1vh;
}
.contain-con{
  font-size: 4vw;
  color: black;
  padding-top: 1vh;
  padding-bottom: 1vh;
  text-align: left;
  display: block;
 width: 60vw;
  word-break: keep-all;
word-wrap: break-word;
}


.comment_fixed_footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 110rpx;
  background-color: #f5f5f5;
  z-index: 1;
}
 
.footer_oper_box {
  width: 58%;
  height: 100%;
  display: flex;
  align-items: center;
}
 
button::after {
  border: none;
}
 
.btn {
  display: flex;
  margin-right: 30rpx;
  background-color: #f5f5f5;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
 
.btn image {
  width: 6vw;
  height: 6vw;
 
}
 
.btn text {
  margin-left: 30rpx;
  font-size: 5vw;
  color: #333;
}
 
.footer_c {
  display: flex;
   margin-right: 15rpx;
}
 
.footer_c image {
  width: 6vw;
  height: 6vw;
  margin-right: 15rpx;
}
 
.footer_c text {
  margin-right: 15rpx;
  font-size: 5vw;
  color: #333;
}
 
.post_comment_button {
  width: 42%;
  height: 100%;
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #ff5167;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}
 
.post_comment_button image {
  width: 64rpx;
  height: 64rpx;
}
 
.post_comment_button text {
  color: snow;
  margin-left: 14rpx;
  font-size: 36rpx;
}